@using System.Collections;
@using VentureSketch.Data;
@model List<ActivityType>
@{
    ViewBag.Title = "ActivityTypes";
    ViewBag.Description = "VentureSketch Activity Types";
}

<br /><br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="5"><h1 class="text-center">ActivityTypes</h1></th>
        </tr>
        <tr>
            <th>ID</th>
            <th>Qualification Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(ActivityType activityType in Model) {
            <tr>
                <td>@activityType.Id</td>
                <td>@activityType.Name</td>
            </tr>
        }
    </tbody>
</table>